{% endif %}

{% if field['parameters'][0].name=='tel' %}
    <input
        {% if field['parameters'][1].name=='required' %}
            required
        {% endif %}
        type="tel"
        pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}"
        name="{{field.name}}"
        class="form-field">

{% endif %}

{% if field['parameters'][0].name=='url' %}
    <input
        {% if field['parameters'][1].name=='required' %}
